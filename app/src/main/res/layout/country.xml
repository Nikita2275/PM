<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:titleTextColor="@android:color/white"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_marginTop="70sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30sp"
                android:gravity="center"
                android:onClick="OnClickTank">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/germany"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Германия"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30sp"
                android:onClick="OnClickTank1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ussr"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="СССР"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30sp"
                android:gravity="center"
                android:onClick="OnClickTank3">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/china"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Китай"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30sp"
                android:gravity="center"
                android:onClick="OnClickTank4">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/france"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Франция"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30sp"
                android:gravity="center"
                android:onClick="OnClickTank5">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/european_union"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Сборная Европы"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30sp"
                android:gravity="center"
                android:onClick="OnClickTank6">

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/japan"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Япония"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </TableRow>

        </TableLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>