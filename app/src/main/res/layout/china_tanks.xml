<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".China_tanks">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:titleTextColor="@android:color/white"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1">

        <TableLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp">

            <com.example.tanks_blitz.RoundImageView
                android:onClick="OnClickWZ1321"
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10sp"
                android:background="@color/grey"
                app:srcCompat="@drawable/wz_132_1" />

            <com.example.tanks_blitz.RoundImageView
                android:onClick="OnClickWZ121"
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10sp"
                android:background="@color/grey"
                app:srcCompat="@drawable/wz_121" />

            <com.example.tanks_blitz.RoundImageView
                android:onClick="OnClickWZ113G"
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10sp"
                android:background="@color/grey"
                app:srcCompat="@drawable/wz113g_ft" />

            <com.example.tanks_blitz.RoundImageView
                android:onClick="OnClickWZ113"
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10sp"
                android:background="@color/grey"
                app:srcCompat="@drawable/wz_113" />

        </TableLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>